/* pages/detail.wxss */

.detail {
  z-index: 10000;
  position: absolute;
  width: 100%;
  height: 100%;
  background: black;
  top: 0;
}

.detail .toptitle {
  position: absolute;
  left: 10%;
  width: 40%;
  top: 0%;
  z-index: 1000;
}

.detail .image {
  position: absolute;
  top: 50%;
  width: 100%;
  max-height: 100%;
  transform: translate(0, -50%);
}

.detail .close {
  position: absolute;
  right: 5%;
  top: 10%;
  width: 20px;
  height: 20px;
  opacity: 0.5;
}



.content-view .info {
  position: absolute;
  bottom: 5%;
  left: 8%;
  width: 84%;
}

.content-view .info .title {
  font-size: 18px;
  font-weight: bold;
  color: white;
}



.content-view .info .content {
  font-size: 10px;
  color: white;
  opacity: 0.8;
}

.content-view .operation {
  position: absolute;
  width: 10%;
  bottom: 10%;
  right: 2%;
}

.content-view .operation .avatar {
  width: 100%;
  text-align: center;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 10px;
}

.content-view .operation .avatar-image {
  width: 40px;
  height: 40px;

}

.content-view .operation .item {
  width: 100%;
  float: left;
  position: relative;
  margin-bottom: 5px;
}

.content-view .operation .item .icon {
  width: 80%;
  margin-left: 10%;
}

.content-view .operation .item .icon .icon-image {
  width: 100%;
  height: 30px;
}

.content-view .operation .item .icon-text {
  text-align: center;
  color: white;
  font-size: 12px;
  display: block;
}