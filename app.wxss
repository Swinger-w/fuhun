/**app.wxss**/
.container {
  width: 100%;
  /* overflow: hidden; */
}

.image {
  position: absolute;
}

.navbar-title {
  width: 100%;
  box-sizing: border-box;
  padding-left: 115px;
  padding-right: 115px;
  height: 32px;
  line-height: 32px;
  text-align: center;
  position: absolute;
  left: 0;
  z-index: 10;
  color: white;
  font-size: 16px;
  /* font-weight: bold; */
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.nv_btn {
  position: absolute;
  z-index: 20;
  height: 32px;
  width: 50px !important;
  left: 10px;
  border-radius: 32px;
  border: 1px solid #969696 !important;
  /* background-color: lightslategray !important; */
}

.nv_img {
  z-index: 10;
  height: 18px;
  width: 18px;
  left: 17px;
  top: 6px;
}

.ovh {
  /* -webkit-backface-visibility: hidden;
  backface-visibility: hidden; */
  -webkit-transform: scale(1);
  transform: scale(1);
  overflow: hidden;
}