/* pages/ground/ground.wxss */
.container {
  width: 100%;
  overflow: hidden;
}

.bg_top {
  width: 100%;
  height: 100%;
  top: -35% !important;
}

.bg_top2 {
  width: 100%;
  height: 100%;
  top: -42%;
  z-index: -1;
}


.top {
  position: absolute;
  width: 80%;
  left: 10%;
  height: 20%;
}

.top .myrate {
  position: absolute;
  width: 20%;
  left: 0;
  top: 10%;
  height: 100%;
  color: white;
}

.top .profile {
  width: 40%;
  left: 30%;
  position: absolute;
  text-align: center;
}

.center-text {
  text-align: center;
  display: block;
  top: 50%;
  width: 100%;
  left: 0;
  height: 100px;
  z-index: 100;
  position: absolute;
  font-size: 14px;
  color: #999;
}

.top .profile .avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-bottom: 10px;
  margin-top: 10px;
}

.top .profile .name {
  color: white;
  text-align: center;
}

.top .profile .description {
  color: white;
  margin-top: 5px;
  text-align: center;
}

.top .mylike {
  position: absolute;
  width: 20%;
  top: 10%;
  right: 0;
  height: 100%;
  color: white;
  z-index: 1000;
}

.top .number {
  text-align: center;
}

.top .description {
  text-align: center;
  font-size: 10px;
}

.bg_title {
  top: 11%;
  font-size: 24px;
  color: white;
  left: 6%;
}

.bg_sm_title {
  top: 17%;
  font-size: 13px;
  color: white;
  left: 6%;
  opacity: 0.15;
}

.space_logo {
  width: 50px;
  height: 50px;
  right: 10%;
  top: 12%;
}

.options {
  background: none;
  width: 80%;
  margin: auto;
  top: 27%;
  height: 10%;
  position: absolute;
  left: 10%;
}

.options .option {
  float: left;
  width: 25%;
  height: 40px;
  font-size: 13px;
  color: white;
  background: none;
  padding: 0;
  padding-top: 10px;
}

.options .option.active {
  float: left;
  width: 25%;
  font-size: 13px;
  color: #5F458A;
  background: none;
  padding: 0;
  background: rgba(203, 200, 232, 0.85);
  box-shadow: 0px 4px 15px rgba(105, 12, 120, 0.22), inset 0px 2px 30px #FFFFFF;
  border-radius: 49px;
  padding-top: 10px;
}

.left-view {
  position: absolute;
  left: -45%;
  height: 30%;
  width: 40%;
  top: 50%;
  border-radius: 20px;
  overflow: hidden;
}

.center-view {
  position: absolute;
  left: 20%;
  height: 50%;
  width: 70%;
  top: 40%;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0px 4px 30px rgba(0, 0, 0, 0.25);
}

.right-view {
  position: absolute;
  right: -45%;
  height: 30%;
  width: 40%;
  top: 50%;
  border-radius: 20px;
  overflow: hidden;
}

.left-view .view-image {
  width: 100%;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translate(0, -50%);
}

.center-view .view-image {
  width: 100%;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translate(0, -50%);
}

.right-view .view-image {
  width: 100%;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translate(0, -50%);
}

.content-view .info {
  position: absolute;
  bottom: 5%;
  width: 100%;
  bottom: 0;
  background: white;
  color: black;
  padding: 15px;
  box-sizing: border-box;
}

.content-view .info .title {
  font-size: 18px;
  font-weight: bold;
  color: black;
}

.content-view .info .copy {
  background-repeat: no-repeat;
  width: 10px;
  height: 10px;
  background-size: contain;
  position: absolute;
  right: -20px;
  bottom: 21px;
}

.content-view .delete {
  background-repeat: no-repeat;
  background-color: rgba(0, 0, 0, 0);
  width: 13px;
  height: 13px;
  background-size: contain;
  position: absolute;
  right: -20px;
  top: 21px;
  z-index: 1000;
}


.content-view .info .content {
  font-size: 10px;
  color: black;
  opacity: 0.8;
}

.content-view .operation {
  position: absolute;
  width: 10%;
  top: 5%;
  right: 2%;
}

.content-view .operation .item {
  width: 100%;
  float: left;
  position: relative;
  margin-bottom: 2px;
}

.content-view .operation .item .icon {
  width: 80%;
  margin-left: 10%;
}

.content-view .operation .item .icon .icon-image {
  width: 100%;
  height: 30px;
}

.content-view .operation .item .icon-text {
  text-align: center;
  color: white;
  font-size: 12px;
  display: block;
}


.btn_1 {
  left: 10%;
  background: #5F458A;
  color: white;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.25), inset 0px 4px 30px #FFFFFF;
  backdrop-filter: blur(4px);
  /* for adjust */
}


.fuhun_btn {
  position: absolute;
  width: 80% !important;
  bottom: 2%;
  height: 70rpx !important;
  border-radius: 80rpx;
  line-height: 30rpx;
  letter-spacing: 6rpx;
  font-size: 30rpx;
}